<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TenderCare</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/services.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="navbar">
        <div class="nav-left">
            <img src="~/images/TenderCare.png" alt="TenderCare Logo" class="logo">
        </div>
        <nav class="nav-links">
            <a href="~/Home/Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">HOME</a>
            <a href="~/Home/Services" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")">SERVICES</a>
            <a href="~/Home/AboutUs" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "AboutUs" ? "active" : "")">ABOUT US</a>
            <a href="~/Account/Login" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "active" : "")">LOGIN</a>
        </nav>
    </div>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer">
            <div class="footer-col">
                <h3>Contact Us</h3>
                <p><i class="fas fa-map-marker-alt"></i> Manila, Philippines</p>
                <p><i class="fas fa-phone"></i> +63 912 345 6789</p>
                <p><i class="fas fa-envelope"></i> tendercare@gmail.com</p>
            </div>
            <div class="footer-col footer-logo">
                <img src="~/images/TenderCare.png" alt="TenderCare Logo">
            </div>
            <div class="footer-col">
                <h3>Navigation</h3>
                <p><a href="~/Home/Index">Home</a></p>
                <p><a href="~/Home/Services">Services</a></p>
                <p><a href="~/Home/AboutUs">About Us</a></p>
                <p><a href="~/Account/Login">Login</a></p>
            </div>
        </div>

        <div class="footer-divider"></div>

        <div class="copyright">
            <p>© TenderCare. All rights reserved</p>
            <div class="social-icons">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" aria-label="Email"><i class="fas fa-envelope"></i></a>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>